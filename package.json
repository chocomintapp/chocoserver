{
  "name": "chocoserver",
  "version": "0.0.1",
  "description": "This is chocoserver repository",
  "author": "taijusanagi",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "clean": "run-p clean:*",
    "clean:app": "rimraf dist",
    "clean:database": "./src/database/scripts/stop.sh",
    "lint": "eslint . --ext .ts --ignore-path .gitignore --max-warnings 0",
    "format": "run-s format:eslint format:prettier",
    "format:eslint": "eslint . --ext .ts --ignore-path .gitignore --fix",
    "format:prettier": "prettier . --ignore-path .gitignore --write",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js --config src/database/config/typeorm.ts",
    "typeorm:migration:generate": "yarn typeorm migration:generate -n migration",
    "typeorm:migration:run": "yarn typeorm migration:run",
    "typeorm:migration:revert": "yarn typeorm migration:revert",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config --configName src/database/config/typeorm.ts",
    "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed --configName src/database/config/typeorm.ts",
    "seed": "ts-node ./src/database/scripts/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "predev": "yarn clean",
    "dev": "run-s dev:*",
    "dev:database": "./src/database/scripts/start.sh",
    "dev:migration": "yarn typeorm:migration:run",
    "dev:app": "nest start --watch --debug",
    "build": "nest build",
    "start": "node dist/main"
  },
  "dependencies": {
    "@apollo/gateway": "^0.26.1",
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/graphql": "^7.10.3",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/typeorm": "^7.1.5",
    "apollo-server-express": "^2.23.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dotenv": "^8.2.0",
    "faker": "^5.5.3",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.4",
    "joi": "^17.4.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.32",
    "typeorm-seeding": "^1.6.1"
  },
  "devDependencies": {
    "@chocomintapp/eslint-config-chocomint-nest": "^0.0.2",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.3",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/supertest": "^2.0.10",
    "eslint": "^7.22.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-plugin-sh": "^0.6.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  }
}
